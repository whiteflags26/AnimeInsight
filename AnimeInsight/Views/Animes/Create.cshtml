@model AnimeInsight.Models.Anime

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class ="text-center"><h1><b>Add Anime</b></h1></div>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <ejs-textbox id="title" placeholder="Title" ejs-for="Title" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <ejs-textbox id="type" placeholder="Type" ejs-for="Type" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <ejs-numerictextbox id="episodeCount" placeholder="EpisodeCount" ejs-for="EpisodeCount" floatLabelType="Always" min="1" format="n0"></ejs-numerictextbox>
                    <span asp-validation-for="EpisodeCount" class="text-danger fs-6"></span>
                </div>
                <div class="mb-3">
                    <ejs-textbox id="description" placeholder="Description (Max 2000 characters)" ejs-for="Description" floatLabelType="Always" multiline="true" showClearButton input="inputHandler" cssClass="custom-textbox-multiline"></ejs-textbox>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div id="numbercount"></div>
                <div class="mb-3">
                    <ejs-numerictextbox id="duration" placeholder="Duration" ejs-for="Duration" floatLabelType="Always" min="1" format="n0"></ejs-numerictextbox>
                    <span asp-validation-for="Duration" class="text-danger fs-6"></span>
                </div>
                <div class="mb-3">
                    <ejs-datepicker id="releaseDate" placeholder="Release Date" ejs-for="ReleaseDate" floatLabelType="Always" format="MMM-dd-yy"></ejs-datepicker>
                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="submit" value="Save" class="btn btn-primary" style="margin-right:5px;font-weight:bold;" />
                    <button type="button" class="btn btn-outline-dark" onclick="location.href='@Url.Action("Index", "Animes")'"><b>Back to List</b></button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
